@page
@model RazorPagesMovie.Pages.Movies.IndexModel

<h1>Index</h1>

<form>
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        <label>Title: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PagedMovies[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.PagedMovies[0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.PagedMovies[0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.PagedMovies[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.PagedMovies[0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PagedMovies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model.PagedMovies, page => Url.Page("./Index", new { pageNumber = page }))
</div>
